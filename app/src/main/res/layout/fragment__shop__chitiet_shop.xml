<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Fragment_Shop_ChitietShop">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="15dp"
            android:id="@+id/id_ctr1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_img_star"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/star_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/id_img_star"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Đánh giá"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_danhgia"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_gach"
                android:text="4.9"
                android:textColor="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_gach"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_5"
                android:text="/"
                android:textColor="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_5"
                android:layout_marginRight="50dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="5"
                android:textColor="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/v_mau1"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#1A020202"
            app:layout_constraintTop_toBottomOf="@+id/id_ctr1" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="15dp"
            android:id="@+id/id_ctr2"
            app:layout_constraintTop_toBottomOf="@id/v_mau1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_img_chat"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_chat_shop_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/id_img_chat"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Tỉ lệ phản hồi Chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_tyle"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_phantram"
                android:text="87"
                android:textColor="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_phantram"
                android:layout_marginRight="50dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="%"
                android:textColor="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/v_mau2"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#1A020202"
            app:layout_constraintTop_toBottomOf="@+id/id_ctr2" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="15dp"
            android:id="@+id/id_ctr3"
            app:layout_constraintTop_toBottomOf="@id/v_mau2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_img_sanpham"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_sanpham_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/id_img_sanpham"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Sản phẩm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_slsp_chitiet_shop"
                android:layout_marginRight="60dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text=""
                android:textColor="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/v_mau3"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#1A020202"
            app:layout_constraintTop_toBottomOf="@+id/id_ctr3" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="15dp"
            android:id="@+id/id_ctr4"
            app:layout_constraintTop_toBottomOf="@id/v_mau3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_img_nguoi"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_nguoi_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/id_img_nguoi"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Đã tham gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_thoigian_thamgia"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_nam"
                android:text="3"
                android:textColor="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_nam"
                android:layout_marginRight="50dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="năm"
                android:textColor="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/v_mau4"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#1A020202"
            app:layout_constraintTop_toBottomOf="@+id/id_ctr4" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="15dp"
            android:id="@+id/id_ctr5"
            app:layout_constraintTop_toBottomOf="@id/v_mau4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_img_diachi"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_diachi_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_1"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/id_img_diachi"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Link của shop: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_2"
                android:textColor="#ff0000"
                app:layout_constraintLeft_toRightOf="@+id/tv_1"
                app:layout_constraintTop_toTopOf="parent"
                android:text="cosplaysuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_3"
                android:textColor="#ff0000"
                app:layout_constraintLeft_toRightOf="@+id/tv_2"
                app:layout_constraintTop_toTopOf="parent"
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_nameshop"
                android:textColor="#ff0000"
                app:layout_constraintLeft_toRightOf="@+id/tv_3"
                app:layout_constraintTop_toTopOf="parent"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/v_mau5"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#1A020202"
            app:layout_constraintTop_toBottomOf="@+id/id_ctr5" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="15dp"
            android:id="@+id/id_ctr6"
            app:layout_constraintTop_toBottomOf="@id/v_mau5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_img_xacminh"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_xacminh_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_21"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/id_img_xacminh"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Tài khoản đã được xác minh: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_phone"
                android:layout_marginLeft="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_21"
                android:src="@drawable/icon_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/img_email"
                android:layout_marginLeft="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_phone"
                android:src="@drawable/icon_email"
                android:layout_width="22dp"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_marginLeft="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_email"
                android:src="@drawable/icon_facebook1"
                android:layout_width="18dp"
                android:layout_height="19dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>