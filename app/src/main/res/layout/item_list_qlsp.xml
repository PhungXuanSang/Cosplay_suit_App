<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemlistproduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivListQlspImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            android:src="@drawable/image" />

        <LinearLayout
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvListQlspName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:text="đasfdfsadasdadasd"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Số Lượng :"
                    android:textColor="#888484"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvListQlspAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="999.999.999"
                    android:textColor="#0583BC"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Giá : "
                    android:textColor="#888484"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvListQlspPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="999,999,999"
                    android:textColor="#FF0000"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llButtom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvStutus"
                android:layout_width="@dimen/_43sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#AAFBAD"
                android:gravity="center"
                android:padding="@dimen/_9sdp"
                android:text="Hiện"
                android:textColor="@color/Red"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/tvHuy"
                android:layout_width="@dimen/_43sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F49696"
                android:gravity="center"
                android:padding="@dimen/_9sdp"
                android:text="Hủy"
                android:textColor="#94DA42"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>