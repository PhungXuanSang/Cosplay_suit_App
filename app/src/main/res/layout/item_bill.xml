<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="2dp"
        android:background="#F4F4F4">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/home_24" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/tvname_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_margin="2dp"/>
            <TextView
                android:id="@+id/tvsize_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size: L"
                android:textSize="15dp"
                android:layout_margin="2dp"/>
            <TextView
                android:id="@+id/tvprice_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="900.000 VND"
                android:textSize="15dp"
                android:textColor="#BD0909"
                android:layout_margin="2dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="2dp"
        android:background="#F4F4F4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total quantity( 1 product ): "
                android:textSize="16dp"
                android:layout_margin="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_tongbill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="900.000 VND"
                android:textColor="#FD0000"
                android:textSize="13dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btndialog_addcart"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/my_button_bg4"
                android:gravity="center"
                android:text="Mua lại"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_below="@+id/tv_tongbill"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_buy"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/my_button_bg4"
                android:gravity="center"
                android:text="Đánh giá"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_below="@+id/tv_tongbill"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>