<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <ImageView
        android:src="@drawable/imgshop"
        android:id="@+id/img_image_sanpham"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="120dp"/>
    <TextView
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_max="wrap"
        android:ellipsize="end"
        android:textSize="16dp"
        android:maxLines="2"
        android:id="@+id/tv_name_sanpham"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Quần Jeans Nữ ống Loe, Quần bò Ống Loe màu hường,có nhiều họa tiết trong đó"
        app:layout_constraintLeft_toRightOf="@id/img_image_sanpham"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toRightOf="@id/img_image_sanpham"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_sanpham"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

        <TextView
            android:textSize="15dp"
            android:textColor="#ff0000"
            android:id="@+id/tv_da_ban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã bán : " />

        <TextView
            android:textColor="#ff0000"
            android:id="@+id/tv_sl_ban"
            android:text="2,3k"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/img_image_sanpham"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ff0000"
            android:textSize="14dp"
            android:text="₫"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#ff0000"
            android:layout_marginLeft="1dp"
            android:textSize="16dp"
            android:id="@+id/tv_gia_sanpham"
            android:text="1.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:clipToOutline="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:outlineProvider="background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:gravity="center_horizontal"
            android:background="#E34412"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOP"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center_horizontal"
            android:background="#E34412"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#ffffff"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/tam_giac" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>