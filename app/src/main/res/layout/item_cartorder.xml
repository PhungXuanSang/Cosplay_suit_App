<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="2dp"
        android:background="#F4F4F4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cbk_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="50dp">
                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_24" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_xoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#BF1616"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/tvname_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:layout_margin="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"/>
                <Spinner
                    android:id="@+id/spinnerproper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:id="@+id/tvsize_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size: L"
                    android:textSize="15dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:id="@+id/tvprice_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="900.000 VND"
                    android:textSize="15dp"
                    android:textColor="#BD0909"
                    android:layout_margin="2dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgtru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/horizontal_rule_24"
                        android:layout_below="@+id/tvgia"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/tv_soluong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvgia"
                        android:layout_marginTop="3dp"
                        android:text="1"
                        android:textSize="20dp"
                        android:layout_marginLeft="4dp"/>

                    <ImageView
                        android:id="@+id/imgcong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_24"
                        android:layout_below="@+id/tvgia"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="4dp"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>