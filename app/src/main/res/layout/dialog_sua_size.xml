<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bogoc1"
    android:orientation="vertical"

    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa kích thước"
        android:textSize="24dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/ed_namesua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên kích thước"
        android:inputType="textNoSuggestions"
        android:layout_marginBottom="20dp"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/ed_mountsua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số lượng"
        android:inputType="number"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/btn_thoatsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thoát"
            android:textColor="#14AAED"
            android:backgroundTint="@color/white"

            />
        <Button
            android:id="@+id/btn_suaSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sửa"
            android:textColor="#14AAED"
            android:backgroundTint="@color/white"
            />
    </LinearLayout>

</LinearLayout>