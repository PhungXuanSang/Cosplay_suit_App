<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ForgotPasswdActivity"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_sendotp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/error"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Đổi mật khẩu thất bại!"
            android:textColor="@color/colortextfirst"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="Đổi mật khẩu thất bại do người dùng hủy thao tác"
            android:textColor="@color/colortextsecond"
            android:textSize="14sp"/>


    </LinearLayout>
   <LinearLayout
       android:layout_marginBottom="20dp"
       android:gravity="center_horizontal|bottom"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/btn_vehome"
               android:text="Về trang chủ"
               android:layout_marginStart="100dp"
               android:layout_marginEnd="100dp"
               android:layout_marginTop="20dp"
               android:textColor="@color/white"
               android:textSize="11sp"
               android:background="@drawable/backgroundbutton1"/>

           <ProgressBar
               android:id="@+id/pro_sendotpnumber"
               android:visibility="gone"
               android:layout_gravity="center"
               android:layout_width="35dp"
               android:layout_height="35dp"/>
       </FrameLayout>
       <TextView
           android:textColor="#ED8EAF"
           android:id="@+id/tv_thuchienlai"
           android:layout_marginStart="35dp"
           android:layout_marginEnd="35dp"
           android:layout_marginTop="15dp"
           android:text="Thực hiện lại thao tác"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>
</LinearLayout>