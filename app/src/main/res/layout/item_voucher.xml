<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/bgr_voucher">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <!-- Existing TextView for "Sale" -->
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Sale"
            android:textColor="#F0F1F6"
            android:drawableTop="@drawable/baseline_shopping_bag_24" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Existing TextViews for "Discount", "Content", and "Amount" -->
        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F0F1F6"
            android:text="Giảm giá: 15% "
            android:textSize="16sp" />

        <TextView
            android:layout_marginRight="20dp"
            android:textColor="#F0F1F6"
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black friday"
            android:textSize="16sp" />

        <TextView
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:textStyle="italic"
            android:textColor="#F0F1F6"
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số voucher: 99"
            android:textSize="12sp" />


    </LinearLayout>

  </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/ic_sua_vc"
            />


        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:visibility="gone"
            android:background="@drawable/ic_xoa_vc"
            />
    </LinearLayout>
</LinearLayout>